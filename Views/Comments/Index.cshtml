@model IEnumerable<ScruMster.Areas.Identity.Data.Comment>

@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Index</h1>

<button type="button" class="btn btn-outline-primary btn-sm">
    <a class=" nav-link text-primary" asp-action="Create">+Create New</a>
</button> 


<br /><br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sprint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sprint.Description)
            </td>
            <td>
                
                @Html.DisplayFor(modelItem => item.Author.LastName)
            </td>
            <td>
                <a class="text-primary" asp-action="Edit" asp-route-id="@item.CommentId">Edit</a> |
                <a class="text-primary" asp-action="Details" asp-route-id="@item.CommentId">Details</a> |
                <a class="text-danger" asp-action="Delete" asp-route-id="@item.CommentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
